configuration {
    dpi: 0;
    show-icons: true;
    font: "D2Coding NF 16";
    show-icons: true;
    sidebar-mode: true;
    terminal: "alacritty";
}

* {
    red:                         #eb6e67;
    blue:                        #6eaafb;
    purple:                      #a020f0;
    grey:                        #d0cbca;
    foreground:                  #efefef;
    background:                  #353646ee;
    lightbg:                     #50536b;
    lightfg:                     #c2c2c2;
    normal-background:           transparent;
    normal-foreground:           var(lightfg);
    active-background:           transparent;
    active-foreground:           var(foreground);
    urgent-background:           transparent;
    urgent-foreground:           var(red);
    selected-active-background:  var(lightbg);
    selected-active-foreground:  var(lightfg);
    selected-normal-background:  var(lightbg);
    selected-normal-foreground:  var(foreground);
    selected-urgent-background:  var(red);
    selected-urgent-foreground:  var(foreground);
    alternate-active-background: var(active-background);
    alternate-active-foreground: var(active-foreground);
    alternate-normal-background: var(normal-background);
    alternate-normal-foreground: var(normal-foreground);
    alternate-urgent-background: var(urgent-background);
    alternate-urgent-foreground: var(urgent-foreground);

    spacing: 0;
    background-color: transparent;

    font: "D2Coding NF 16";
}

window {
    transparency: "real";
    background-color: transparent;
    border: 0;
}

inputbar {
    margin: 0 0 0.6em 0;
    padding: 1%;

    border: 0;
    border-color: var(grey);
    border-radius: 5px;

    children: [prompt, textbox-prompt-colon, entry, case-indicator];
    background-color: var(background);
}

prompt {
    text-color: var(blue);
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    margin: 0 0.3em;
}

listview {
    padding: 0.2em;
    spacing: 0.2em;
    dynamic: true;

    border: 0;
    border-color: var(grey);
    border-radius: 5px;

    scrollbar: false;
    background-color: var(background);
}

element {
    padding: 0.2em;
    border-radius: 5px;
}

element-icon {
    size: 1em;
    padding: 0 0.6em 0 0;
}

message, error-message {
    margin: 0 0 0.6em;
    padding: 1%;
    border: 1;
    border-radius: 5px;
    background-color: var(background);
}
error-message {
    margin: 0;
    padding: 0.6em;
    border-color: var(red);
    border: 3px;
}

mode-switcher {
    margin: 0.6em 0 0 0;

    border: 0;
    border-color: var(grey);
    border-radius: 5px;

    background-color: var(background);
}

button selected {
    padding: 0.3em;
    border-radius: 5px;
}
